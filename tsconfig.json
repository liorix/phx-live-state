{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "test"]
}
